- @category.each do |category|
  %section.genre
    %header.clearfix
      %h1= category.title
      .genre_sorting
        Sort by:
        %select(name="")
          %option(value="a-z") Title: A - Z
          %option(value="z-a") Title: Z - A
          %option(value="rating") Rating
    %article.row
      - category.video.each do |video|
        .video.col-md-2
          = link_to video, nil do
            %img(src="#{video.small_cover_url}")
